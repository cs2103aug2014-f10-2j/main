import static org.junit.Assert.*;

import java.text.ParseException;

import org.junit.*;


public class TestModel {
	Task testTask;
	DeadlineTask testDeadlineTask;
	TimedTask testTimedTask;
	FloatingTask testFloatingTask;
	
	@Before
	public void initialise() {
		testTask = new Task("Meeting at CLB", "Group Project", 2);
		testDeadlineTask = new DeadlineTask("Do CS2103 homework", "Homework on testing", 5, "241014", "10:00");
		testTimedTask = new TimedTask("Do CS2103 online quiz", "Quiz on testing", 5, "241014", "20:00", 2.0);
		testFloatingTask = new FloatingTask("Meeting at CLB", "Group Project", 2);
	}

// Check methods in Task.java
	@Test
	public void checkIsDoneMethod() {
		testTask.setIsDone(true);
		assertEquals(testTask.getIsDone(), true);
	}
	
	@Test
	public void checkSetTaskNameMethod() {
		testTask.setTaskName("newTask");
		assertEquals(testTask.getTaskName(), "newTask");
	}
	
	@Test
	public void checkSetTaskDescriptionMethod() {
		testTask.setTaskDescription("newTaskDescription");
		assertEquals(testTask.getTaskDescription(), "newTaskDescription");
	}
	
	@Test
	public void checkSetPriorityMethod() {
		testTask.setPriority(10);
		assertEquals(testTask.getPriority(), 10);
	}
	
	@Test
	public void checkTaskCloneMethod() {
		Task tempTask;
		tempTask = testTask.clone();
		assertEquals(tempTask.getTaskName(), "Meeting at CLB");
		assertEquals(tempTask.getTaskDescription(), "Group Project");
		assertEquals(tempTask.getPriority(), 2);
		assertEquals(tempTask.getIsDone(), false);
	}
	
// Check methods in DeadlineTask.java
	
	@Test
	public void checkDeadlineTaskSetDateTime() throws ParseException {
		testDeadlineTask.setDateTime("251014", "23:59");
		assertEquals(testDeadlineTask.getEndDateTime(), "251014 23:59");
	}
	
	
	public void checkDeadlineTaskCloneMethod() {
		DeadlineTask tempDeadlineTask;
		tempDeadlineTask = testDeadlineTask.clone();
		assertEquals(tempDeadlineTask.getTaskName(), "Do CS2103 homework");
		assertEquals(tempDeadlineTask.getTaskDescription(), "Homework on testing");
		assertEquals(tempDeadlineTask.getPriority(), 5);
		assertEquals(tempDeadlineTask.getIsDone(), false);
	}
	
// Check methods in TimedTask.java
	
	@Test
	public void checkSetDuration() {
		testTimedTask.setDuration(4.0);
		assertEquals(testTimedTask.getEndDateTime(), "251014 00:00");
	}
	
	@Test
	public void checkTimedTaskSetDateTime() throws ParseException {
		testTimedTask.setDateTime("261014", "19:00");
		assertEquals(testTimedTask.getStartDateTime(), "261014 19:00");
	}
	
	@Test
	public void checkTimedTaskToString() {
		assertEquals(testTimedTask.toString(), 	"Do CS2103 online quiz from 241014 20:00 to 241014 22:00");
	}
	

	public void checkTimedTaskCloneMethod() {
		TimedTask tempTimedTask;
		tempTimedTask = testTimedTask.clone();
		assertEquals(tempTimedTask.getStartDateTime(), "241014 20:00");
		assertEquals(tempTimedTask.getEndDateTime(), "241014 22:00");
	}
	
// Check methods in FloatingTask.java
	
	public void checkFloatingTaskCloneMethod() {
		FloatingTask tempFloatingTask;
		tempFloatingTask = testFloatingTask.clone();
		assertEquals(tempFloatingTask.getTaskName(), "Meeting at CLB");
		assertEquals(tempFloatingTask.getTaskDescription(), "Group Project");
		assertEquals(tempFloatingTask.getPriority(), 2);
		assertEquals(tempFloatingTask.getIsDone(), false);
	}
	
/*
	@org.junit.Test
	public void test() {
		fail("Not yet implemented");
	}
*/
}
